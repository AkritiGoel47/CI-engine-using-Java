<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane prefHeight="616.0" prefWidth="729.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.FXMLController">
    <children>
        <!-- Back Button -->
        <Button fx:id="back" layoutX="44.0" layoutY="25.0" onAction="#backAction" prefHeight="24.0" prefWidth="90.0" style="-fx-background-color: rgb(34, 151, 153); -fx-border-width: 1; -fx-border-color: rgb(72,207,203);" text="Back" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0" />
         </font></Button>
        
        <!-- Build Command Text Area -->
        <TextArea fx:id="buildCommandField" layoutX="48.0" layoutY="298.0" prefHeight="100" prefWidth="639.0" wrapText="true" />
        
        <!-- Test Command Text Area -->
        <TextArea fx:id="testCommandField" layoutX="48.0" layoutY="441.0" prefHeight="100" prefWidth="639.0" wrapText="true" />
        
        <!-- Test Phase CheckBox -->
        <CheckBox fx:id="testCheckBox" layoutX="47.0" layoutY="555.0" prefHeight="30.0" prefWidth="183.0" text="Run Tests" textFill="#229799">
         <font>
            <Font name="System Bold" size="15.0" />
         </font></CheckBox>
        
        <!-- Execute Build Button -->
        <Button layoutX="321.0" layoutY="555.0" onAction="#handleBuildAction" prefHeight="30.0" prefWidth="110.0" style="-fx-border-color: rgb(72, 207, 203); -fx-border-width: 1; -fx-background-color: rgb(34, 151, 153);" text="Start" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0" />
         </font></Button>
      <Label layoutX="48.0" layoutY="259.0" prefHeight="30.0" prefWidth="199.0" text="Build Commands" textFill="#229799">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
      <Label layoutX="48.0" layoutY="409.0" prefHeight="24.0" prefWidth="140.0" text="Test Commands" textFill="#229799">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
      <TextFlow fx:id="outputTextFlow" layoutX="50.0" layoutY="74.0" prefHeight="176.0" prefWidth="639.0" />
        
    </children>
</AnchorPane>
